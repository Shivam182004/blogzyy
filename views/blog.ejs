<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title><%= blog.title %> | Blog</title>
    <style>
      body {
        background-color: #f8f9fa;
      }
      .container {
        max-width: 800px;
      }
      .blog-cover {
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      }
      .profile-img {
        border-radius: 50%;
        margin-right: 10px;
      }
      .comment-box {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        padding: 10px 15px;
        margin-bottom: 15px;
      }
      pre {
        background-color: #e9ecef;
        border-radius: 5px;
        padding: 10px;
        white-space: pre-wrap; /* Allows wrapping of text */
      }
      h1 {
        font-weight: 700;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-5">
      <h1 class="text-center mb-4"><%= blog.title %></h1>
      <img
        src="<%= blog.coverImageURL %>"
        class="img-fluid blog-cover"
        alt="Cover Image"
      />
      <pre class="mt-4"><%= blog.body %></pre>
    </div>

    <div class="container mt-4 d-flex align-items-center">
      <img
        src="<%= blog.createdBy.profileImageURL %>"
        width="50px"
        class="profile-img"
        alt="Profile Picture"
      />
      <h5 class="mb-0"><%= blog.createdBy.fullName %></h5>
    </div>

    <div class="container mt-5">
      <h2>Comments (<%= comments.length %>)</h2>

      <% if (locals.user) { %>
      <form
        action="/blog/comment/<%= blog._id %>"
        method="post"
        class="mb-4"
      >
        <div class="input-group">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your comment"
          />
          <button class="btn btn-primary" type="submit">Add</button>
        </div>
      </form>
      <% } %>

      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <div class="comment-box d-flex align-items-start">
          <img
            src="<%= comment.createdBy.profileImageURL %>"
            width="40px"
            class="profile-img"
            alt="Commenter Profile Picture"
          />
          <div>
            <strong><%= comment.createdBy.fullName %></strong>
            <pre class="mb-1"><%= comment.content %></pre>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
